<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Flights</th>
      <th>Passenger</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.flights_id %></td>
        <td><%= ticket.passenger_id %></td>
        <td><%= ticket.price %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path,class:"btn btn-primary" %>
