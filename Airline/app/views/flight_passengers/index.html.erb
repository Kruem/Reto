<p id="notice"><%= notice %></p>

<h1>Listing Flight Passengers</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Passenger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_passengers.each do |flight_passenger| %>
      <tr>
        <td><%= flight_passenger.flight_id %></td>
        <td><%= flight_passenger.passenger_id %></td>
        <td><%= link_to 'Show', flight_passenger %></td>
        <td><%= link_to 'Edit', edit_flight_passenger_path(flight_passenger) %></td>
        <td><%= link_to 'Destroy', flight_passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

