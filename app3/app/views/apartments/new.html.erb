<div class="row center-xs">
  <div class="box">

<h1>Ingrese el apartamento </h1>
<hr>
    <%= form_for [@tower,@apartment] do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :torre_id %><br>
        <%= f.text_field :tower_id%>
      </p>
      <hr>
      <p>
        <%= f.submit "Guardar" %>
      </p>
    <% end %>

    <%= link_to 'Ver Lista de apartamentos', tower_apartments_path %>

  </div>
</div>
