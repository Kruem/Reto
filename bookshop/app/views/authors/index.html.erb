<% content_for :head do%>
<title>Autor-index</title>
<% end %>
<% content_for :nav do %>

<nav class="navbar-static-top" role="navigation">
  <ul class="menu">
    <li><%= link_to "Usuario", users_path%></li>
    <li><%= link_to "Libros", books_path%></li>
  </ul
</nav>
<% end %>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header text-center">
    <h1>Lista <small>Autores</small></h1>
  </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.lastname %></td>
        <td><%= author.country %></td>
        <td><%= link_to 'Show', author , class:"btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path ,class:"btn btn-primary" %>
</div>
<br>
