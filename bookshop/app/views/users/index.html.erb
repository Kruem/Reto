<% content_for :head do%>
<title>Index-User</title>
<% end %>
<% content_for :nav do %>

<nav class="navbar-static-top" role="navigation">
  <ul class="menu">
    <li><%= link_to "Autor", authors_path%></li>
    <li><%= link_to "Libros", books_path%></li>
  </ul
</nav>
<% end %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header text-center">
    <h1>Usuarios <small>Index</small></h1>
  </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to 'Show', user, class:"btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_user_path, class:"btn btn-primary" %>
<br>
<br>
</div>
