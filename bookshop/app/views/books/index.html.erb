<% content_for :head do%>
<title>Books-index</title>
<% end %>
<p id="notice"><%= notice %></p>
<% content_for :nav do %>

<nav class="navbar-static-top" role="navigation">
  <ul class="menu">
    
    <li><%= link_to "User", users_path%></li>
    <li><%= link_to "Autor", authors_path%></li>

  </ul
</nav>
<% end %>

<div class="container">
  <div class="page-header text-center">
    <h1>Books <small>Index</small></h1>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author_id %></td>
          <td><%= link_to 'Show', book, class:"btn btn-warning" %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-warning" %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path, class:"btn  btn-primary" %>

</div>
  <br>
